{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@verity/admin-panel": ["libs/admin-panel/src/index.ts"],
      "@verity/admin-panel/server": ["libs/admin-panel/src/server.ts"],
      "@verity/app": ["libs/app/src/index.ts"],
      "@verity/audit-logs": ["libs/audit-logs/src/index.ts"],
      "@verity/auth": ["libs/auth/src/index.ts"],
      "@verity/auth/server": ["libs/auth/src/server.ts"],
      "@verity/cli": ["libs/cli/src/index.ts"],
      "@verity/dependency": ["libs/dependency/src/index.ts"],
      "@verity/deps-api": ["libs/deps-api/src/server.ts"],
      "@verity/prisma": ["libs/prisma/src/index.ts"],
      "@verity/scopes": ["libs/scopes/src/index.ts"],
      "@verity/shared": ["libs/shared/src/index.ts"],
      "@verity/shared/server": ["libs/shared/src/server.ts"],
      "@verity/ui": ["libs/ui/src/index.ts"],
      "@verity/ui/*": ["libs/ui/src/lib/*"],
      "@verity/ui/server": ["libs/ui/src/server.ts"],
      "@verity/user-roles": ["libs/user-roles/src/index.ts"],
      "@verity/users": ["libs/users/src/index.ts"],
      "@verity/utils": ["libs/utils/src/index.ts"],
      "@verity/utils/server": ["libs/utils/src/server.ts"],
      "@verity/version": ["libs/version/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
